<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Yt</th>
      <th>Name</th>
      <th>User</th>
      <th>Thumbnail url</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.yt_id %></td>
        <td><%= video.name %></td>
        <td><%= video.channel.user.email %></td>
        <td><%= video.thumbnail_url %></td>
        <td><%= video.published_at %></td>
        <% if policy(video).show? %>
          <td><%= link_to 'Show', video %></td>
        <% end %>
        <% if policy(video).edit? %>
          <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <% end %>
        <% if policy(video).destroy? %>
          <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

